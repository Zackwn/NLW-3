{
    "compilerOptions": {
      "downlevelIteration": true,
      "outDir": "dist",
      "typeRoots": ["node_modules/@types", "@types/*"],
      "target": "es5",
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true
    },
    "include": [
      "src", "@types/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }