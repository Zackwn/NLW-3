{
  "compilerOptions": {
    "target": "ES2017",                       
    "module": "commonjs",              
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
